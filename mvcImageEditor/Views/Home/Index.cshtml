<script>

    $(function () {
        $('input[type=file]').change(function () {
            var val = $(this).val().toLowerCase(),
                regex = new RegExp("(.*?)\.(gif|png|jpg)$");

            if (!(regex.test(val))) {
                $(this).val('');
                alert('Please select correct file format');
                //ajax alert
            }
        });
    });

    function isValid() {

        var extensionsList = ['.jpg', '.gif', '.png'];
        var frontFileName = document.getElementById("");
        var backFileName = document.getElementById("");


        return hasExtension(frontFileName, extensionsList) && hasExtension(backFileName, extensionsList)
    }

    function hasExtension(inputID, exts) {
        var fileName = document.getElementById(inputID).value;
        return (new RegExp('(' + exts.join('|').replace(/\./g, '\\.') + ')$')).test(fileName);
    }
</script>
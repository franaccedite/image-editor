@*validation form*@
<script>

    $('#submitForm').click(function () {
        var inputTextList = $('input[type=text]');

        var backInput = inputTextList[0].value;
        var frontInput = inputTextList[1].value;

        var isValid = backInput != "" && frontInput != "";
        if (!isValid) {
            alert('Please choose files');
        }

        return isValid;

    })

    $(function () {
        $('input[type=file]').change(function () {
            var val = $(this).val().toLowerCase(),
                regex = new RegExp("(.*?)\.(gif|png|jpg)$");


            var inputTextList = $('input[type=text]');
            var attrId = this.getAttribute("id");


            if (!(regex.test(val))) {

                if (attrId == "BackFileUpload") {
                    inputTextList[0].setAttribute("style", "font-size: 0;")
                }
                else {
                    inputTextList[1].setAttribute("style", "font-size: 0;")
                }


                alert('Please select correct file format');
            }
            else {
                if (attrId == "BackFileUpload") {
                    inputTextList[0].setAttribute("style", "font-size: 14;")
                }
                else {
                    inputTextList[1].setAttribute("style", "font-size: 14;")
                }
            }
        });
    });

</script>


















